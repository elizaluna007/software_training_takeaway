.star {
	height: 80rpx;
	width: 80rpx;
	margin-left: 15rpx;
	-webkit-animation: switch 1s ease-out infinite;
	        animation: switch 1s ease-out infinite;
}
@-webkit-keyframes switch {
0%,
	100% {
		-webkit-transform: scale(1);
		        transform: scale(1);
}
50% {
		-webkit-transform: scale(0.9);
		        transform: scale(0.9);
}
}
@keyframes switch {
0%,
	100% {
		-webkit-transform: scale(1);
		        transform: scale(1);
}
50% {
		-webkit-transform: scale(0.9);
		        transform: scale(0.9);
}
}
